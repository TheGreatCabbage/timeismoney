{
	"manifest_version": 2,

	"name": "Time Is Money",
	"short_name": "t=$",
	"description": "See prices as hours of work!",
	"version": "3.0.6",

	"permissions": [
		"tabs", "http://*/", "https://*/", "http://*/*", "https://*/*", "cookies","webRequest", "webRequestBlocking"
	],

	"background": {
		"scripts": [
			"vendors/intenta/dist/intenta_background.js",
			"jquery-1.11.0.min.js",
			"background.js"
		]
	},

	"options_page": "options.html",

	"icons": {
		"16": "images/icon.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"browser_action": {
		"name": "Time Is Money",
		"default_icon": "images/icon.png"
	},

	"content_scripts": [ {
	    "js": [
				"jquery-1.11.0.min.js",
				"vendors/intenta/dist/intenta_content_script.js",
				"background.js",
				"content.js",
				"intenta.js"
			],
	    "matches": [
				"http://*/*",
				"https://*/*",
				"<all_urls>"
			]
	}
 ]
}
